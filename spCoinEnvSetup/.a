alias a=". $SPONSOR_COIN_ENV/.a"
alias e=". $SPONSOR_COIN_ENV/.e"
alias m=". $SPONSOR_COIN_ENV/.m"
alias va="vi $SPONSOR_COIN_ENV/.a;a"
alias ve="vi $SPONSOR_COIN_ENV/.e;e"
alias vm="vi $SPONSOR_COIN_ENV/.m;m"

alias cdsc="cd $SPONSOR_COIN_HOME"

alias vbrc="vi ~/.bashrc"

alias vs="code"

alias hhnode="clear; npx hardhat node  2>&1 > $SPONSOR_COIN_LOGS/hhnode.out"
alias hhcompile="clear;npx hardhat compile"

alias remixd="nohup node $SPONSOR_COIN_HOME/node_modules/@remix-project/remixd/src/bin/remixd.js 2>&1 > $SPONSOR_COIN_LOGS/remixd.out &"

# TESTING
alias hhdeploypolygon="npx hardhat run scripts/deploy.js --network polygon"
alias hhdeploysepolia"npx hardhat run scripts/deploy.js --network sepolia"
alias hhdeploygoerli="npx hardhat run scripts/deploy.js --network goerli"
alias hhdeploy=hhdeploypolygon
alias hhsize="npx hardhat size-contracts"
alias hhtest="reset;clear; npx hardhat test 2>&1 | tee ./test.out/hhtest.out"

alias forkmainnet="npx hardhat node --fork https://mainnet.infura.io/v3/08b06e80980b4c1c9d9d450f4f71607d &"
alias forkpolygon="npx hardhat node --fork https://polygon-mainnet.infura.io/v3/08b06e80980b4c1c9d9d450f4f71607d &"
alias forksepolia="npx hardhat node --fork https://sepolia.infura.io/v3/08b06e80980b4c1c9d9d450f4f71607d &"
